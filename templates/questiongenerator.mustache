   <div class="container mt-5 d-flex flex-col">
    <!-- Dropdown -->
<div class="col-10">

    {{#has_categories}}
        <div class="mb-3">
            <label for="categoryDropdown" class="form-label">Category</label>
            <select id="categoryDropdown" class="form-control">
                {{#categories}}
                    <option value="{{id}}" {{#first_category_id}}{{#isFirst}}{{id}}{{/isFirst}}{{/first_category_id}}>{{name}}</option>
                {{/categories}}
            </select>
        </div>
        <div class="d-flex justify-content-end mb-3">
        <button id="check-difficulty-all" class="btn btn-primary" type="">Check Difficulty all</button>
        </div>
    <!-- Questions Table -->
        <table class="table table-striped" id="questionTable">
            <thead>
                <tr>
                    <th><input type="checkbox" id="selectAll"></th>
                    <th>Question</th>
                    <th>Options</th>
                    <th>Answer</th>
                    <th>Difficulty</th>
                </tr>
            </thead>
            <tbody>
                {{#questions}}
                <tr>
                    <td>
                    {{#difficulty}}
                    <input type="checkbox" value="{{id}}">
                    {{/difficulty}}
                    {{^difficulty}}
                    <input type="checkbox" value="{{id}}" disabled="true">
                    {{/difficulty}}
                    </td>
                    <td>{{question}}</td>
                    <td>{{#options}}{{.}}, {{/options}}</td>
                    <td>{{answer}}</td>
                    <td>    {{#difficulty}}
                {{difficulty}}
            {{/difficulty}}
            {{^difficulty}}
                <button data-question-id="{{id}}" class="btn btn-primary check-difficulty">Check Difficulty</button>
            {{/difficulty}}</td>
                </tr>
                {{/questions}}
                {{^questions}}
                <tr>
                    <td colspan="5">No questions available for this category</td>
                </tr>
                {{/questions}}
            </tbody>
        </table>
    {{/has_categories}}
    {{^has_categories}}
            <h2>No Categories is avaiable right now! Generate and save questions first.</h2>
    {{/has_categories}}

    <!-- Button trigger modal -->
        <button type="button" id="setQuizBtn" class="btn btn-primary" data-toggle="modal" data-target="#setquizModal">
        Set Quiz
        </button>

    <!-- Modal -->
        <div class="modal fade" id="setquizModal" tabindex="-1" role="dialog" aria-labelledby="setquizModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Quiz Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
    <form id="quizForm" novalidate>
        <div class="modal-body">
            <div class="form-group">
                <label for="inputQuizName">Quiz Title</label>
                <input type="text" name="quiz_title" class="form-control" id="inputQuizName" placeholder="Enter Quiz Title" required>
                <div class="invalid-feedback">
                    Please provide a quiz title.
                </div>
            </div>
            <div class="form-group">
                <label for="inputEasyMarks">Easy Level Marks</label>
                <input type="number" name="easy_marks" max="100" min="1" class="form-control" id="inputEasyMarks" placeholder="Enter Easy Level Marks" required>
                <div class="invalid-feedback">
                    Please provide a valid number between 1 and 100 for easy level marks.
                </div>
            </div>
            <div class="form-group">
                <label for="inputMediumMarks">Medium Level Marks</label>
                <input type="number" name="medium_marks" max="100" min="1" class="form-control" id="inputMediumMarks" placeholder="Enter Medium Level Marks" required>
                <div class="invalid-feedback">
                    Please provide a valid number between 1 and 100 for medium level marks.
                </div>
            </div>
            <div class="form-group">
                <label for="inputHardMarks">Hard Level Marks</label>
                <input type="number" name="hard_marks" max="100" min="1" class="form-control" id="inputHardMarks" placeholder="Enter Hard Level Marks" required>
                <div class="invalid-feedback">
                    Please provide a valid number between 1 and 100 for hard level marks.
                </div>
            </div>                
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>


            </div>
        </div>
        </div>

    </div>

</div>
    <div class="col-2">

    <h2>Quiz List</h2>
    {{#quizes}}
<div class="d-flex flex-col g-4 align-items-center justify-content-between border-bottom pb-2">
    <h6 class="m-0">{{quiz_title}} - {{total_marks}}</h6>
    {{#state}}
    <button type="button" class="btn btn-link state-activated p-0" style="color:red;" data-quiz-id={{id}}>
        Deactivate
    </button>
    {{/state}}
        {{^state}}
    <button type="button" class="btn btn-link state-deactivated p-0" data-quiz-id={{id}}>
        Activate
    </button>
    {{/state}}
    </div>
    {{/quizes}}
    {{^quizes}}
    <p>No Quizes avaiable now.</p>
    {{/quizes}}
    </div>