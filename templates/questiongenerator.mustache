   <div class="container mt-5">
    <!-- Dropdown -->
    <div class="mb-3">
        <label for="categoryDropdown" class="form-label">Category</label>
        <select id="categoryDropdown" class="form-control">
            <option value="">Select Category</option>
            {{#categories}}
                <option value="{{id}}">{{name}}</option>
            {{/categories}}
        </select>
    </div>

    <!-- Table -->
    <table class="table table-striped" id="questionTable">
        <thead>
            <tr>
                <th><input type="checkbox" id="selectAll"></th> 
                <th>Question</th>
                <th>Options</th>
                <th>Answer</th>
                <th>Difficulty</th>
            </tr>
        </thead>
        <tbody>
            <!-- Question rows will be inserted dynamically -->
        </tbody>
    </table>
<!-- Button trigger modal -->
    <button type="button" id="setQuizBtn" class="btn btn-primary" data-toggle="modal" data-target="#setquizModal">
    Set Quiz
    </button>

<!-- Modal -->
    <div class="modal fade" id="setquizModal" tabindex="-1" role="dialog" aria-labelledby="setquizModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Quiz Details</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
<form id="quizForm" novalidate>
    <div class="modal-body">
        <div class="form-group">
            <label for="inputQuizName">Quiz Title</label>
            <input type="text" name="quiz_title" class="form-control" id="inputQuizName" placeholder="Enter Quiz Title" required>
            <div class="invalid-feedback">
                Please provide a quiz title.
            </div>
        </div>
        <div class="form-group">
            <label for="inputEasyMarks">Easy Level Marks</label>
            <input type="number" name="easy_marks" max="100" min="1" class="form-control" id="inputEasyMarks" placeholder="Enter Easy Level Marks" required>
            <div class="invalid-feedback">
                Please provide a valid number between 1 and 100 for easy level marks.
            </div>
        </div>
        <div class="form-group">
            <label for="inputMediumMarks">Medium Level Marks</label>
            <input type="number" name="medium_marks" max="100" min="1" class="form-control" id="inputMediumMarks" placeholder="Enter Medium Level Marks" required>
            <div class="invalid-feedback">
                Please provide a valid number between 1 and 100 for medium level marks.
            </div>
        </div>
        <div class="form-group">
            <label for="inputHardMarks">Hard Level Marks</label>
            <input type="number" name="hard_marks" max="100" min="1" class="form-control" id="inputHardMarks" placeholder="Enter Hard Level Marks" required>
            <div class="invalid-feedback">
                Please provide a valid number between 1 and 100 for hard level marks.
            </div>
        </div>                
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>


        </div>
    </div>
    </div>

</div>
