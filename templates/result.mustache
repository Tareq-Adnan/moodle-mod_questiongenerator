<div class="container my-5">
    <h5 class="text-center alert alert-secondary">{{quiz_title}}</h5>
    {{#questions}}
    <div class="card shadow-sm mb-4 border-0">
      <div class="card-header bg-white d-flex justify-content-between align-items-center py-1">
        <h6 class="fw-bold mb-0">{{question}}</h6>
        <span class=" text-{{color}} px-3 py-2 bold">{{level}}</span>
      </div>
  
      <div class="card-body">
        <div class="">
          {{#indexed_options}}
          <div class="form-check mb-2 {{#correct}}alert alert-success text-white{{/correct}} {{#selected}}{{^correct}}alert alert-danger text-white{{/correct}}{{/selected}}">
            <input type="radio" class="form-check-input mx-1" name="question_{{questionid}}"
                   id="option_{{questionid}}_{{index}}" value="{{index}}" data-ref="{{answer}}"
                   data-type="{{level}}" disabled
                   {{#selected}}checked{{/selected}}>
            <label class="form-check-label mx-4" for="option_{{questionid}}_{{index}}">
              {{value}}
            </label>
          </div>
          {{/indexed_options}}
        </div>
      </div>
    </div>
    {{/questions}}
  </div>
  